{
  "name": "raspinfo",
  "version": "0.0.3",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "release": "ng build --prod --aot",
    "update": "rm -rf node_modules && npm cache verify && npm i",
    "serve": "npm run cleanserver && npm run launchserver && pm2 logs raspinfo-dev",
    "firstdeploy": "npm run update && npm run release && npm run releaseserver && pm2 start ./dist/server.js --name raspinfo -i 1",
    "deploy": "npm run release && npm run releaseserver && pm2 restart raspinfo",
    "releaseserver": "webpack -p --config ./server/server.webpack.config.ts",
    "launchserver": "pm2 install typescript && pm2 start ./server/server.ts --watch -f --name raspinfo-dev",
    "cleanserver": "pm2 delete raspinfo-dev --silent || :",
    "stopserver": "pm2 stop raspinfo-dev --silent || :",
    "gitreset": "git reset HEAD --hard && git clean -fd",
    "gitrefresh": "git fetch --all --tags --prune"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@angular/service-worker": "^5.0.0",
    "body-parser": "1.18.2",
    "core-js": "^2.4.1",
    "express": "4.16.2",
    "morgan": "1.9.0",
    "rxjs": "^5.5.2",
    "webpack-node-externals": "1.6.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.6.3",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@types/express": "4.11.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/morgan": "1.7.35",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-loader": "3.2.0",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.4.2"
  }
}
